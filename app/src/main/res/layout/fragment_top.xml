<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TopFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10pt"

            >


            <TextView
                android:id="@+id/some_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Молдир Базарбаева"
                android:textAppearance="@style/some_id" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:background="#42B33E"
                        android:text="22"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:background="#F44336"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:background="#00BCD4"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="26dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22 KOs"
                        android:textAlignment="center"
                        android:textColor="#42B33E"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 KOs"
                        android:textAlignment="center"
                        android:textColor="#F44336"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="239dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="210dp"
                    android:layout_height="212dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image1"
                    tools:srcCompat="@drawable/image1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="4pt">


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/editTextTextPersonName1"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:text="статус:" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="активный"
                            android:textColor="#42B33E"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2pt">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/editTextTextPersonName2"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:text="возраст:" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="30 лет"
                            android:textStyle="bold" />


                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2pt">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/editTextTextPersonName3"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:text="рост:" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="165 см"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2pt">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/editTextTextPersonName4"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:text="пол:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="женский"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2pt">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:text="дебют:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12.04.2010 г."
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4pt">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:text="место рождения:" />


                    </TableRow>

                    <TableRow
                        android:layout_width="148dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="г. Кокшетау"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4pt">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:text="весовая категрия:" />


                    </TableRow>

                    <TableRow
                        android:layout_width="148dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Лёгкий вес (63 кг)"
                            android:textStyle="bold" />
                    </TableRow>
                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="183dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ДОСТИЖЕНИЯ:"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Чемпионка РК (2014 г.)"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. серебряная призерка чемпионата Казахстана (2016 г.)"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. бронзовая призерка чемпионата Азии-2015."
                        android:textSize="18sp" />
                </TableRow>


            </TableLayout>

            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:height="60dp"
                android:background="#2196F3"
                android:drawableLeft="@android:drawable/ic_menu_more"
                android:drawablePadding="6dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="участвовать"
                android:textColor="#FFF7F7"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>
</layout>